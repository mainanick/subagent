{
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/mainanick/allalone.git"
  },
  "engines": {
    "node": ">= v10.17.0"
  },
  "scripts": {
    "build": "yarn workspace all-alone run build",
    "start": "yarn workspace all-alone run start",
    "test": "yarn workspace all-alone run test",
    "lint": "prettier --write packages/**/*.{ts,tsx,js,jsx}"
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^4.2.3",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}